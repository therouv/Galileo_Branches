<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Galileo_Branches>
			<version>0.1.0</version>
		</Galileo_Branches>
	</modules>
	<global>
		<blocks>
			<branches>
				<class>Galileo_Branches_Block</class>
			</branches>
		</blocks>
		<helpers>
			<branches>
				<class>Galileo_Branches_Helper</class>
			</branches>
		</helpers>
		<models>
            <branches>
                <class>Galileo_Branches_Model</class>
                <resourceModel>branches_resource</resourceModel>
            </branches>
            <branches_resource>
                <class>Galileo_Branches_Model_Resource</class>
                <entities>
                    <branches>
                        <table>galileo_branches</table>
                    </branches>
                </entities>
            </branches_resource>
        </models>
		<resources>
            <branches_setup>
                <setup>
                    <module>Galileo_Branches</module>
                </setup>
            </branches_setup>
        </resources>
	</global>
	<frontend>
		<routers>
			<branches>
				<use>standard</use>
				<args>
					<module>Galileo_Branches</module>
					<frontName>branches</frontName>
				</args>
			</branches>
		</routers>
        <layout>
            <updates>
                <branches>
                    <file>branches.xml</file>
                </branches>
            </updates>
        </layout>
	</frontend>
	<admin>
		<routers>
			<branches>
				<use>admin</use>
				<args>
					<module>Galileo_Branches</module>
					<frontName>branches</frontName>
				</args>
			</branches>
		</routers>
	</admin>
	<adminhtml>
        <layout>
            <updates>
                <branches>
                    <file>branches.xml</file>
                </branches>
            </updates>
        </layout>
	</adminhtml>
</config>
